<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="vkz.android.dev.caculator.MainActivity"
    android:background="@drawable/calculator">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:background="@drawable/header"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_rawData"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:lines="4"
            android:maxLines="4"
            android:textColor="#234574"
            android:textSize="24dp"
            android:visibility="visible"
            android:textAlignment="center"
            android:editable="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_mc"
                android:background="@drawable/button"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="3dp"
                android:text="MC"
                android:textSize="18dp"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_msum"
                android:background="@drawable/button"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="3dp"
                android:text="M+"
                android:textSize="18dp"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_msub"
                android:background="@drawable/button"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="3dp"
                android:text="M-"
                android:textSize="18dp"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_mr"
                android:background="@drawable/button"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="3dp"
                android:text="MR"
                android:textSize="18dp"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_c"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="C"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_per"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="%"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_par"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="( )"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_mul"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="x"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_one"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="1"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_two"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="2"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_three"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="3"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_sub"
                android:layout_row="2"
                android:layout_column="3"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="-"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_four"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="4"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_five"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="5"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_six"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="6"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_sum"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="+"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_seven"
                android:layout_row="4"
                android:layout_column="0"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="7"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_eight"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="8"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_nine"
                android:layout_row="4"
                android:layout_column="2"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="9"
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="\u00F7"
                android:id="@+id/btn_div"
                android:layout_row="4"
                android:layout_column="3"
                android:background="@drawable/button"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_zero"
                android:layout_row="5"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="0"
                android:textSize="18dp"
                android:layout_column="0"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/bt_dot"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@drawable/button"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="."
                android:textSize="18dp"
                android:onClick="buttonClicked" />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/btn_back"
                android:layout_row="5"
                android:layout_column="2"
                android:background="@drawable/button1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:onClick="buttonClicked" />

            <Button
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="="
                android:id="@+id/btn_equals"
                android:layout_row="5"
                android:layout_column="3"
                android:background="@drawable/button"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:onClick="buttonClicked" />

        </GridLayout>
    </LinearLayout>

</FrameLayout>
